[
  { "keys": ["ctrl+tab"], "command": "next_view" },
  { "keys": ["ctrl+shift+tab"], "command": "prev_view" },
  { "keys": ["ctrl+shift+l"], "command": "show_overlay", "args": {"overlay": "command_palette", "text": "Set Syntax: "} },
  { "keys": ["j", "k"], "command": "exit_insert_mode",
    "context":
    [
        { "key": "setting.command_mode", "operand": false },
        { "key": "setting.is_widget", "operand": false }
    ]
  },
  { "keys": ["k", "j"], "command": "exit_insert_mode",
    "context":
    [
        { "key": "setting.command_mode", "operand": false },
        { "key": "setting.is_widget", "operand": false }
    ]
  },
  { "keys": ["J", "K"], "command": "exit_insert_mode",
    "context":
    [
        { "key": "setting.command_mode", "operand": false },
        { "key": "setting.is_widget", "operand": false }
    ]
  },
  { "keys": ["K", "J"], "command": "exit_insert_mode",
    "context":
    [
        { "key": "setting.command_mode", "operand": false },
        { "key": "setting.is_widget", "operand": false }
    ]
  },
  { "keys": [",", "p"], "command": "run_macro_file", "args": {"file": "Packages/User/registerpaste.sublime-macro"},
    "context":
    [
        { "key": "setting.command_mode", "operand": true }
    ] 
  },
  { "keys": [",", "y"], "command": "run_macro_file", "args": {"file": "Packages/User/cleancopy.sublime-macro"},
    "context":
    [
        { "key": "setting.command_mode", "operand": true }
    ] 
  },
  { "keys": ["ctrl+`"], "command": "toggle_terminus_panel" },
